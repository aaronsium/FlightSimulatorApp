<Window x:Class="FlightSimulatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorApp"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        xmlns:Controls="clr-namespace:FlightSimulatorApp.controls"
        xmlns:view="clr-namespace:FlightSimulatorApp.view"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFD1D1D1">
    <Grid Margin="0,0,-385,-367">

        <Viewbox HorizontalAlignment="Left" Height="373" Margin="473,176,0,0" VerticalAlignment="Top" Width="365">
            <view:MyJoystick Margin="100,100,100,100" />
        </Viewbox>

        <Viewbox HorizontalAlignment="Left" Height="586" Margin="-98,-66,0,0" VerticalAlignment="Top" Width="773">
            <view:screen x:Name="screen" Margin="100,100,100,100" HorizontalAlignment="Center"/>
        </Viewbox>
        <Button Content="connect" HorizontalAlignment="Left" Margin="0,43,0,0" VerticalAlignment="Top" Width="86" Click="Button_Click" Height="33" Background="#FFD1D1D1" Foreground="#FF4A70B1" FontWeight="Bold" FontSize="15"/>
        <Button Content="disconnect" HorizontalAlignment="Left" Margin="85,43,0,0" VerticalAlignment="Top" Width="92" Click="Button_Click_1" Height="33" Background="#FFD1D1D1" Foreground="#FF4A70B1" FontSize="14" FontWeight="Bold"/>
        <view:board x:Name="board"  Margin="509,25,394.6,0" VerticalAlignment="Top" Height="190"/>
    </Grid>
</Window>